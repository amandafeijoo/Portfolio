{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "skipLibCheck": true,
  
      "allowJs": true,
      "checkJs": false,
  
      "strict": false,
      "forceConsistentCasingInFileNames": true,
  
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] },
      "types": ["vite/client"]
    },
    "include": ["src", "vite.config.ts"]
  }
  